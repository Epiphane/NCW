{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "label": "cmake",
            "args": [
                "/Applications/CMake.app/Contents/bin/cmake",
                "-G",
                "Unix Makefiles",
                ".."
            ],
            "type": "shell",
            "group": "build",
            "command": "/Applications/CMake.app/Contents/bin/cmake",
            "problemMatcher": []
        },
        {
            "label": "make game",
            "args": [
                "-j",
                "8",
                "Game"
            ],
            "type": "shell",
            "group": "build",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": []
        },
        {
            "label": "make editor",
            "args": [
                "-j",
                "8",
                "Editor"
            ],
            "type": "shell",
            "group": "build",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": []
        }
    ]
}